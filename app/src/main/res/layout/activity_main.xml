<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jlhlyby.testshape.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/oval"
                android:text="圆形" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/oval"
                android:text="椭圆" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ring"
                android:text="圆环固定值" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ring1"
                android:text="圆环比例" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ring2"
                android:text="圆环比例" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_solid"
                android:text="方形" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_stroke"
                android:text="方形描边" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_corners"
                android:text="方形四圆角" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_corners1"
                android:text="方形二圆角" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_gradient"
                android:text="渐变" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rectangle_gradient1"
                android:text="圆渐变" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rectangle_gradient2"
                android:text="扫描渐变" />
            <TextView
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/line_stroke"
                android:text="画线" />
            <TextView
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/line_stroke1"
                android:text="虚线" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
